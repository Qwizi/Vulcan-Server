form#createAccountForm(method="post")
    fieldset(class="uk-fieldset")
        legend(class="uk-legend") Dodaj konto
        div(class="uk-margin")
            label Username
                input(class="uk-input", type="text", name="username", placeholder="username" autofocus=true)
        div(class="uk-margin")
            label Password
                input(class="uk-input", type="password", name="password", placeholder="password")

    div(class=["uk-flex", "uk-flex-inline"])
        div
            button#createAccountFormBtn(type="submit" class=["uk-button", "uk-button-primary"]) Utworz